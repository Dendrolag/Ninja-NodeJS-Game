{
    "watch": ["server.js", "server/"],
    "ext": "js,json",
    "ignore": [
      "public/*",
      "node_modules/*",
      "*.test.js",
      "server/test/*"
    ],
    "exec": "node server.js",
    "events": {
      "start": "cls || clear",
      "restart": "cls || clear"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "delay": "500"
  }